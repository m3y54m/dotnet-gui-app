<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:dotnet_gui_app.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450" x:Class="dotnet_gui_app.Views.MainWindow" Icon="/Assets/avalonia-logo.ico" Title="dotnet_gui_app">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto" ColumnDefinitions="Auto,*" Margin="30" Width="600">
        <Grid.Styles>
            <Style Selector="Button">
                <Setter Property="Margin" Value="3"/>
            </Style>
        </Grid.Styles>

        <TextBox Grid.Row="0" Grid.Column="1" Grid.RowSpan="6" Text="{Binding ClickStatusUpdate}"/>

        <Button Grid.Row="1" Grid.Column="0" Content="Simple VM Command" Command="{Binding UpdateFromSimpleMethod}"/>

        <Button Grid.Row="2" Grid.Column="0" Content="Reactive Command" Command="{Binding UpdateTextFromReactiveCommand}"/>

        <Button Grid.Row="3" Grid.Column="0" Name="ClickCodeButton" Content="Click Code Button"/>

        <Button Grid.Row="4" Grid.Column="0" Content="Click Via XAML"/>

        <Button Grid.Row="5" Grid.Column="0" Content="Mouse Pointer Enter"/>

    </Grid>
</Window>
